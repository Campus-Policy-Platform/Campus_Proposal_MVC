@model List<SelectListItem>
@{
    ViewData["Title"] = "新增提案";
}

<form method="post">
    <div class="content-area">
        <div class="w-50">
            <h5>輸入提案標題：</h5>
            <input type="text" id="Title" name="Title" class="form-control" placeholder="輸入20字內" maxlength="20" required />
        </div>
        <div class="w-50">
            <h5>選擇提案類別：</h5>
            <select id="CategoryId" name="CategoryId" asp-items="@Model" required>
                <option value="">==請選擇提案類別==</option>
            </select>
        </div>
         
    </div>
    
    <div class="content-area">
        <div class="col">
            <h5>輸入提案內容：</h5>
            <textarea name="Pcontent" id="Pcontent" class="form-control" placeholder="輸入限100字內" maxlength="100" required cols="10" rows="10"></textarea>
        </div>
        <div class="col">
            <h5>輸入利益與影響：</h5>
            <textarea name="GainsInfluential" id="GainsInfluential" class="form-control" placeholder="輸入限100字內" maxlength="100" required cols="30" rows="10"></textarea>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">submit</button>
</form>

@section topCSS{
    <link rel="stylesheet" href="~/css/propsalsStyle.css" />
}