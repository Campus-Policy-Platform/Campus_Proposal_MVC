<ul class="navbar-nav flex-grow-1">
    @if(User.Identity.IsAuthenticated)
    {
        @*已登入*@
        <li><a href="#" class="btn btn-primary me-2">@User.Identity.Name</a></li>
        <li>@Html.ActionLink("登出", "SignOut","Account", null, new { @class="btn btn-danger"})</li>
    }
    else
    {
        @*未登入*@
        <li><a href="@Url.Action("Login", "Account")" class="btn btn-primary me-2">使用者</a></li>
        <li><a href="@Url.Action("GerentLogin", "Gerent")" class="btn btn-primary me-2">管理者</a></li>

    }
</ul>