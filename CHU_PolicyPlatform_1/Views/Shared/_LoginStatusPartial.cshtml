<ul class="navbar-nav log">
    @if (User.Identity.IsAuthenticated)
    {
        @*已登入*@
        <li><a href="#" class="btn btn-outline-primary me-2">@User.Identity.Name</a></li>
        <li>@Html.ActionLink("登出", "SignOut","User", null, new { @class="btn btn-outline-danger"})</li>
    }
    else
    {
        @*未登入*@
        <li><a href="@Url.Action("UserLogin", "User")" class="btn btn-outline-primary me-2">使用者</a></li>
        <li><a href="@Url.Action("GerentLogin", "Gerent")" class="btn btn-outline-primary me-2">管理者</a></li>

    }
</ul>